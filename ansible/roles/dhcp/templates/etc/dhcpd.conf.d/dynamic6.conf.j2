{% for network in dhcp %}

#NetworkID: {{network.id}}
#NetworkName: {{network.name}}
#Tenant: {{network.tenant.name}}
#Tenant Identifier: {{network.tenant.tenant_identifier}}

{% for subnet in network.subnets %}
{% if subnet.address | is_ipv6 %}
subnet6 {{subnet.address}}/{{subnet.prefix}} {

    option dhcp-renewal-time {{network.default_lease_time}};
    option dhcp-rebinding-time {{network.max_lease_time}};
{% for option in network.options -%}
{% if option.option_name | dhcp_option_is_v6 -%}
    option {{option.option_name}} {{option.option_value}};
{% endif %}
{% endfor %}

{% for pool in subnet.pools %}
    range6 {{pool.start}} {{pool.stop}};
{% endfor %}
{% for host in subnet.fixed_hosts %}
    host {{network.id}}_{{host.name}} {
        host-identifier option dhcp6.client-id "{{host.mac}}";
        fixed-address6 {{host.address}};
    }
{% endfor %}
}
{% endif %}
{% endfor %}
{% endfor %}